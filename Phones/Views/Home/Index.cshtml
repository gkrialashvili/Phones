@model IEnumerable<Phones.Models.PhoneData>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

<div class="d-flex flex-row product-main">
    <div class="filter-container d-flex flex-column">
        <form action="/Home/Index" method="post">
            <input type="text" class="form-control " placeholder="დასახელება" name="Model" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            <div class="form-group mt-2">
                <select class="form-control mb-2" name="Brand">
                    <option value="" name="" disabled selected>მწარმოებელი</option>
                    @foreach (var item in @ViewBag.Brands)
                    {
                        <option name="" value="@item.Name">@item.Name</option>
                    }

                </select>
            </div>
            <div class="d-flex flex-row justify-content-between mb-2">
                <input type="number" placeholder="0.0" class="form-control min-max-price" name="minPrice">
                <span class="text-center mr-2 ml-2">-</span>
                <input type="number" placeholder="0.0" class="form-control min-max-price" name="maxPrice">
            </div>

            <button type="submit" class="btn btn-success">Success</button>
        </form>
    </div>
    <span class="line w-75%"></span>
    <div class="container">
        <div class="row center-items">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-2 product-container d-flex flex-column text-center">
                    <a href="@Url.Action("Detail", "Home", new {Id = item.Id})" class="product-name"><img src="@("../Images/" + item.ImageName)" class="img-fluid rounded" /></a>
                    <a href="@Url.Action("Detail", "Home", new {Id = item.Id})" class="product-name">@item.Brand.Name @item.Model @item.Memory </a>
                    <span class="product-name">@item.Price</span>
                </div>
            }
        </div>
    </div>
</div>

